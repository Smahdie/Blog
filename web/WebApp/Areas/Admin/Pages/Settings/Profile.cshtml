@page

@model ProfileModel

@{
    ViewData["Title"] = "ویرایش اطلاعات";
    ViewData["BodyClass"] = "smallForm";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <div class="box">
                <form asp-antiforgery="true"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-success="ajaxOnSuccess">

                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <span asp-validation-for="Input.UserName" class="help-block"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" type="email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="help-block"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="help-block"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Gender"></label>
                            <select asp-for="Input.Gender" class="form-control" asp-items="@Html.GetEnumSelectList<Gender>()"></select>
                            <span asp-validation-for="Input.Gender" class="help-block"></span>
                        </div>
                    </div>
                    <div class="box-footer text-left">
                        <button type="submit" class="btn btn-primary">ذخیره</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
