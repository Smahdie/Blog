@page

@model DetailsModel

@{
    ViewData["Title"] = "جزییات پیام";
    ViewData["BreadCrumb"] = new List<BreadCrumbDto> { new BreadCrumbDto { Text = "پیام ها", Href = Url.Page("Index") } };
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <div class="box">
                <div class="box-body detail-grid">
                    <div class="row">
                        <div class="col-4 col-md-2">
                            <label asp-for="Message.FirstName"></label>
                        </div>
                        <div class="col-8 col-md-10">
                            @Model.Message.FirstName
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4 col-md-2">
                            <label asp-for="Message.LastName"></label>
                        </div>
                        <div class="col-8 col-md-10">
                            @Model.Message.LastName
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4 col-md-2">
                            <label asp-for="Message.Email"></label>
                        </div>
                        <div class="col-8 col-md-10">
                            @Model.Message.Email
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4 col-md-2">
                            <label asp-for="Message.PhoneNumber"></label>
                        </div>
                        <div class="col-8 col-md-10">
                            @Model.Message.PhoneNumber
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4 col-md-2">
                            <label asp-for="Message.Text"></label>
                        </div>
                        <div class="col-8 col-md-10">
                            @Model.Message.Text
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4 col-md-2">
                            <label asp-for="Message.CreatedOn"></label>
                        </div>
                        <div class="col-8 col-md-10 text-right" dir="ltr">
                            @Model.Message.CreatedOn
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4 col-md-2">
                            <label>وضعیت</label>
                        </div>
                        <div class="col-8 col-md-10">
                            @Html.Raw(Model.Message.IsRead ? "خوانده شده" : "خوانده نشده")
                        </div>
                    </div>
                </div>

                <div class="box-footer text-left">
                    <a asp-page="Index" class="btn btn-default mt-3">بازگشت</a>
                </div>
            </div>
        </div>
    </div>
</section>
