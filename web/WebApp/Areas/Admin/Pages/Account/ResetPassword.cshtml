@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="login-box-body">
    <p class="login-box-msg">ثبت رمز عبور جدید</p>
    <form method="post">
        <input asp-for="Input.Code" type="hidden" />
        <div class="input-group mb-3">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
            <input asp-for="Input.Email" type="email" class="form-control">
        </div>

        <div class="input-group mb-3">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
            <input asp-for="Input.Password" type="password" class="form-control">
        </div>

        <div class="input-group mb-3">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control">
        </div>

        <div class="row">
            <div class="col-8"></div>
            <div class="col-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">تایید</button>
            </div>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>

    <div class="mt-3 text-center">
        <a asp-page="./Login" class="text-center">ورود به پنل با رمز عبور فعلی</a>
    </div>
</div>
