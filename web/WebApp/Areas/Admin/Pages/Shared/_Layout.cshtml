<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"]</title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/panel_build/layout/style.min.css">

    @RenderSection("Styles", required: false)

    <link rel="stylesheet" href="~/libs/admin-lte/css/AdminLTE.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <environment include="Development">
        <link rel="stylesheet" href="~/panel_assets/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/panel_assets/css/site.min.css" asp-append-version="true" />
    </environment>


</head>
<body class="hold-transition sidebar-mini layout-fixed @ViewData["BodyClass"]">
    <div id="loading-div" class="spiner-loading">
        <div class="spiner-container">
            <div class="spiner-center">
                <div class="spinner-border" role="status"></div>
            </div>
        </div>
    </div>
    <div class="wrapper">

        @await Html.PartialAsync("_Header")

        @await Html.PartialAsync("_SideBar")

        <div class="content-wrapper">

            @await Html.PartialAsync("_StatusMessage", TempData["StatusMessage"])

            @await Html.PartialAsync("_BreadCrumbs")

            @RenderBody()

            @await Html.PartialAsync("_DeleteModal")

        </div>

        @await Html.PartialAsync("_Footer")

    </div>

    <script src="~/panel_build/layout/first.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script src="~/panel_build/layout/last.min.js"></script>
    <script src="~/panel_assets/plugins/datepicker/jquery.md.bootstrap.datetimepicker.js"></script>

    <environment include="Development">
        <script src="~/panel_assets/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/panel_assets/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>