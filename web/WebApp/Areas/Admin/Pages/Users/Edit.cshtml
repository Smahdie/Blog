@page

@model EditModel

@{
    ViewData["Title"] = "ویرایش مشخصات";
    ViewData["BreadCrumb"] = new List<BreadCrumbDto> { new BreadCrumbDto { Text = "مدیران", Href = Url.Page("Index") } };
    ViewData["BodyClass"] = "smallForm";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <div class="box">
                <form asp-antiforgery="true"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-success="ajaxOnSuccess">

                    <input type="hidden" asp-for="Input.Id" />

                    <div class="box-body">
                        <h3>@Model.Input.Email</h3>

                        <div class="form-group">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <span asp-validation-for="Input.UserName" class="help-block"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="help-block"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="help-block"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Gender"></label>
                            <select asp-for="Input.Gender" class="form-control" asp-items="@Html.GetEnumSelectList<Gender>()"></select>
                            <span asp-validation-for="Input.Gender" class="help-block"></span>
                        </div>
                    </div>

                    <div class="box-footer text-left">
                        <button type="submit" class="btn btn-primary">تایید</button>
                        <a asp-page="Index" class="btn btn-default">بازگشت</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
