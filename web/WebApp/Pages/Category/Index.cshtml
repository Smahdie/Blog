@page "Page-{pageNumber=1}/{id}/{slug}"
@model WebApp.Pages.Category.IndexModel

@{ 
    ViewData["BreadCrumbTitle"] = ViewData["PageHeading"] = Model.CategoryName;
}

<main id="main">
    @await Html.PartialAsync("_BreadCrumbs")

    <section id="blog" class="blog">
        <div class="container">

            <div class="row">

                <div class="col-lg-8 entries">
                    @if (Model.Contents != null && Model.Contents.Any())
                    {
                        foreach (var item in Model.Contents)
                        {
                            @await Html.PartialAsync("_BlogListItem", item)
                        }

                        <div class="blog-pagination">
                            @Html.Pagination(
                            Model.Contents,
                            current => Url.Page("List", new { pageNumber = current, id = Model.RequestId, slug = Model.RequestSlug }),
                            PaginatedStyle.NumbersWithFirstPreviousNextLast,
                            new PaginatedOptions
                            {
                                NextLabel = "بعدی",
                                PreviousLabel = "قبلی",
                                FirstLabel = "اولین",
                                LastLabel = "آخرین"
                            }
                        )
                        </div>
                    }
                    else
                    {
                        <p class="font-125 alert alert-secondary text-center mt-5">مطلبی در این دسته وجود ندارد.</p>
                    }

                </div>

                @await Html.PartialAsync("_BlogSidebar")

            </div>
        </div>
    </section>
</main>