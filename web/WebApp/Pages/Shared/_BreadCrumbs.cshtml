@{
    var breadCrumbs = ViewData["BreadCrumb"] as List<BreadCrumbDto>;
    var lang = Context.CurrentLanguage();
}

@inject SharedLocalizationService localizer

<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <ol>
            <li><a href="@($"/{lang}")">@localizer.Get("Home")</a></li>
            @if (breadCrumbs != null)
            {
                foreach (var item in breadCrumbs)
                {
                    <li><a href="@item.Href">@item.Text</a></li>
                }
            }
            <li>@ViewData["BreadCrumbTitle"]</li>
        </ol>
        <h2>@ViewData["PageHeading"]</h2>
    </div>
</section>