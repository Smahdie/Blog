@using Core.Dtos.PageDtos
@model PageDetailsDto

@{
    var lang = Context.CurrentLanguage();
}

@if (Model != null)
{
    <div class="col-lg-4">
        <div class="icon-box">
            <h3><a asp-page="/Pages/Details" asp-route-keyword="@Model.Keyword" asp-route-culture="@lang">@Model.Title</a></h3>
            <p>
                @Model.Summary
            </p>
        </div>
    </div>
}